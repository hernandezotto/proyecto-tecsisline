extends layouts
block title
  title Autentificar
block contenido
  main#authentication.container
      .row
        .col.s6
          .card.grey.lighten-1.center
            .card-content
              form(action="#", method="post")
                h6 Autentificasen
                .input-field
                  label.black-text(for="correoLogin") Correo
                  input#correoLogin.white.validate(type="email")
                  button.btn.waves-effect.waves-green.white.black-text(type="submit") Enviar